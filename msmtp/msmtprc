defaults
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
 
account default
host smtp.gmail.com
port 587
auth on
user federico.carrone@gmail.com
passwordeval "pass mail/federico.carrone@gmail.com"
from federico.carrone@gmail.com
logfile ~/.msmtp.log

