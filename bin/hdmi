#!/usr/bin/env sh

XorgHdmiConf='Section "ServerLayout"
    Identifier "Layout0"
EndSection

Section "Device"
    Identifier  "Device1"
    Driver      "nvidia"
    VendorName "NVIDIA Corporation"
    BusID "PCI:01:00:0"
    Option "AllowEmptyInitialConfiguration"
EndSection'

rm -f /etc/X11/xorg.conf

echo "$XorgHdmiConf" > /etc/X11/xorg.conf
sv restart /var/service/slim
